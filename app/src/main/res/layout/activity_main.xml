<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/widewine_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center|center_vertical"
        android:hint="widevine id"></TextView>

    <TextView
        android:id="@+id/security_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:hint="security level"
        android:text="TextView" />

    <Button
        android:id="@+id/set_sl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set SL 1"
        android:onClick="setSL1"
        />
    <Button
        android:id="@+id/set_sl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set SL 3"
        android:onClick="setSL3"
        />
    <Button
        android:id="@+id/get_sl_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get SL ID"
        android:onClick="getSLID"/>

</LinearLayout>

